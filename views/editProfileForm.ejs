              <a class="nav-link" href="/logout">Log Out</a>
            </li>
      </div>
    </div>
  </nav><br><br>
<div class="container text-left">
  <h2 class="mb-3 text-center">Edit Profile</h2>
  <br>
  <br>
  <form action="/profiles/edit" method="post">
    <div class="row">
      <div class="col">
        <label class="form-label">Full Name</label>
        <input
          type="text"
          class="form-control"
          name="fullName"
          value="<%= sessionData.fullName %>"
          required
        />
        <br>
        <br>

        <label class="form-label">Birth Date</label>
        <input
          type="date"
          class="form-control"
          name="birthDate"
          value="<%= dateFormat(sessionData.birthDate) %>"
          required
        />
        <br>
        <br>

        <label class="form-label">Zodiac</label>
        <input
          type="text"
          class="form-control"
          name="zodiac"
          value="<%= sessionData.zodiac %>"
          required
        />
        <br>
        <br>

      </div>

    </div>
    <br />

    <button type="submit" class="btn btn-primary d-flex m-auto">Edit Profile</button>
  </form>
</div>

</body>
</html>